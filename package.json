{
  "name": "koan",
  "description": "KOAN Stack (Koa, Angular, Node, Mongo, WebSockets) for real-time full-stack JavaScript web development.",
  "engines": {
    "node": ">=4.0"
  },
  "scripts": {
    "start": "app.js",
    "test": "npm run lint && npm run test-server && npm run test-client",
    "lint": "./node_modules/.bin/eslint . --ignore-pattern dist/",
    "test-server": ":",
    "test-client": ":",
    "build": "npm run build-server && npm run build-client",
    "build-server": "./node_modules/.bin/babel server --out-dir dist/server",
    "build-client": "./node_modules/.bin/babel client --out-dir dist/client"
  },
  "dependencies": {
    "angular2": "2.0.0-alpha.46"
  },
  "devDependencies": {
    "babel-cli": "6.2.0",
    "babel-preset-es2015": "6.1.18",
    "babel-preset-stage-0": "6.1.18",
    "eslint": "1.10.1",
    "eslint-config-airbnb": "1.0.0",
    "jasmine": "2.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/soygul/koan.git"
  },
  "author": "Teoman Soygul",
  "license": "MIT",
  "eslintConfig": {
    "extends": "airbnb/base"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  }
}
